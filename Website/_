function constructComments($cmnts){
                $data = "<div ><b></b><br><br>";
                foreach ($cmnts as $cm){
                $cm['cm'] = trim($cm['cm'], '"');
      
                if(strlen($cm['cm']) != 0 ){
//            var_dump($cm);exit;
                $data .= "<div><span class='comments_name'>{$cm['fn']} {$cm['ln']}</span><br><br>";
                $data .= "- &nbsp;<span>{$cm['cm']}<span><br><br></div><br><br>";
                }
        }
        echo $data."</div>";
    }
